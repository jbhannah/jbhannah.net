{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["jest", "prettier", "react"],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-prototype-builtins": "off",
    "prettier/prettier": "error",
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2
  }
}
